<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textSize">16dp</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
<!-- ___________________________________________________________________________________
		
		Main Activity
    -->
    
    <style name="nowCardStyle" parent="android:Widget.TextView">
     	<item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">top</item>
        <item name="android:minHeight">130dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#707070</item>
    </style>
    
    
    <!-- Link to Blank Page -->
    <style name="link_to_blank_page_plus" parent="android:Widget.TextView">
        <item name="android:textSize">60dp</item>
        <item name="android:textColor">#CCC</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="link_to_blank_page_text" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#999</item>
        <item name="android:gravity">top</item>
    </style>
    
    

</resources>